                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  </button>
                <div class="carousel-item active">
                  <%= image_tag carousel_one.first.card_image_url, class:"d-block w-100" %>
                  <div class="card-index-infos">
                    <div>
