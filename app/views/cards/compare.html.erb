
<div class="compare-container">
  <div class="compare-headers">
    <div>
      <h1>Card Facts</h1>
      <h2><i>"Based on avg. spend of $  <%= session[:onboarding][:spending] %> per month"</i></h2>
    </div>
    <div class="right-text">
      <h2>_ChurnIt</h2>
      <span>Methodology</span>|<span>Card Rank</span>|<span>About Us</span>
    </div>
  </div>

  <div class="line"></div>

  <div class="container-cards">
    <div class="card-index mb-3">
      <h4>Your card</h4>
      <% @card = Card.find(session[:onboarding][:card_selected]) %>
      <%= image_tag @card.card_image_url %>
      <div class="card-index-infos">
        <div>
          <h4><%= @card.card_name %></h4>
          <p>%<%= @card.interest_rate*100%></p>
          <p><%= @card.interest_free_period.to_i %> days interest free</p>
          <p>$<%= @card.annual_fee_init %> annual fee</p>
        </div>
      </div>
    </div>




  </div>

        <h2>Cards we recommended</h2>
          <% @recommended_cards.each do |card| %>
            <%= card.interest_rate%>
            <%= @card.interest_free_period %>
            <%= @card.annual_fee_init %>
            <%= render 'card', card: card %>
          <% end %>

</div>

<h4>Your input income</h4>
  <p><%= session[:onboarding][:income] %></p>
  <h4>Your input spending</h4>
  <p><%= session[:onboarding][:spending] %></p>
